{
  "manifest_version": 3,
  "name": "BingeMeter",
  "version": "1.0.0",
  "description": "Tracks your time on distracting sites so you can stop being a degenerate",
  "permissions": ["storage", "tabs", "alarms", "scripting"],
  "host_permissions": ["http://localhost:5173/"],
  "optional_host_permissions": ["*://*/*"],
  "background": {
    "service_worker": "src/background/index.ts"
  },
  "options_page": "src/options/options.html",
  "action": {
    "default_popup": "src/popup/index.html"
  }
}
